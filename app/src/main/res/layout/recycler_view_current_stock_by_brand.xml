<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/zx2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stockItemName_currentStockByBrand"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jeans" />

            <TextView
                android:id="@+id/stockItemSize_currentStockByBrand"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Size 32"
                android:textColor="@color/colorSecondaryText" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/zx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stockItemUnitPrice_currentStockByBrand"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rs 1200" />

            <TextView
                android:id="@+id/stockItemQty_currentStockByBrand"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:text="Qty 10"
                android:textColor="@color/colorSecondaryText" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>