<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/AppTheme.ButtonBorderlessInList"
            android:padding="0dp"
            android:id="@+id/stockButton_recyclerView_currentStock">

            <TextView
                android:id="@+id/brandName_recyclerView_currentStock"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                style="@style/AppTheme.MainButtonBorderlessInList"
                android:text="Current stock"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_next"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>