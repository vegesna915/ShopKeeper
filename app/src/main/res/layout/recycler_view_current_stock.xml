<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">


        <LinearLayout
            android:id="@+id/stockButton_recyclerView_currentStock"
            style="@style/AppTheme.ButtonBorderlessInList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/brandName_recyclerView_currentStock"
                style="@style/AppTheme.MainButtonBorderlessInList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Current stock"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/ic_navigate_next"/>

        </LinearLayout>


</android.support.v7.widget.CardView>