<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/saleTime_SaleActivity"
            style="@style/AppTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/saleTotalPrice_SaleActivity"
            android:text="06:00 pm" />

        <TextView
            android:id="@+id/saleDate_SaleActivity"
            style="@style/AppTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/saleTime_SaleActivity"
            android:layout_marginTop="4dp"
            android:text="21/06/2017"
            android:textColor="@color/colorSecondaryText" />


        <TextView
            android:id="@+id/saleTotalPrice_SaleActivity"
            style="@style/AppTheme.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Rs 3200" />

    </RelativeLayout>

</android.support.v7.widget.CardView>