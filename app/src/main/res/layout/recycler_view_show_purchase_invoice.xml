<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/zx1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invoiceNumber_recyclerView_showPurchaseInvoice"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IN000132" />

            <TextView
                android:id="@+id/vendorName_recyclerView_showPurchaseInvoice"
                style="@style/AppTheme.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pavan Varma"
                android:textColor="@color/colorSecondaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invoiceTotalPrice_recyclerView_showPurchaseInvoice"
                style="@style/AppTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000/-" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
